<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_back"
    tools:context="com.diptomanpcblab.asus.pcblab.About">

    <ImageView
        android:id="@+id/aboutGameID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="102dp"
        android:src="@drawable/about_game" />

    <ImageView
        android:id="@+id/creditId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/aboutGameID"
        android:layout_below="@+id/aboutGameID"
        android:layout_marginTop="7dp"
        android:src="@drawable/credit" />

</RelativeLayout>
