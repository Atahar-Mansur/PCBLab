<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/option_back"
    tools:context="com.diptomanpcblab.asus.pcblab.Option">

    <ImageView
        android:id="@+id/musicID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="102dp"
        android:src="@drawable/music" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/musicID"
        android:layout_below="@+id/musicID"
        android:layout_marginTop="30dp"
        android:src="@drawable/sound" />

    <ImageView
        android:id="@+id/musicOnId"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/musicID"
        android:src="@drawable/on" />

    <ImageView
        android:id="@+id/musicOffId"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/musicID"
        android:src="@drawable/off"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/soundOnId"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicID"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/musicID"
        android:src="@drawable/on" />

    <ImageView
        android:id="@+id/soundOffId"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicID"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_toEndOf="@+id/musicID"
        android:src="@drawable/off"
        android:visibility="invisible"/>


</RelativeLayout>
