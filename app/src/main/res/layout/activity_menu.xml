<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back01"
    tools:context="com.diptomanpcblab.asus.pcblab.Menu"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/cmd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/command1"
        android:textSize="30sp"
        android:textColor="@color/cmd_color"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/phisicsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/phisics" />

        <ImageView
            android:id="@+id/chemestryId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:src="@drawable/chemestry" />

        <ImageView
            android:id="@+id/biologyId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/biology" />

    </LinearLayout>

</LinearLayout>
