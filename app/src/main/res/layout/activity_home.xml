<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homeBack"
    tools:context="com.diptomanpcblab.asus.pcblab.Home">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/imageView2"
        android:src="@drawable/home_screen" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/pcb" />

    <ProgressBar
        android:id="@+id/progressBarId"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressTint="@color/progress"
        android:progressBackgroundTint="@color/progBack"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="70dp" />

    <ImageButton
        android:id="@+id/startId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="20dp"
        android:background="@color/homeBack"
        android:src="@drawable/start"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/optionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startId"
        android:layout_alignEnd="@+id/startId"
        android:layout_marginTop="5dp"
        android:background="@color/homeBack"
        android:src="@drawable/option"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/aboutId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/optionId"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/optionId"
        android:background="@color/homeBack"
        android:src="@drawable/about"
        android:visibility="invisible" />



</RelativeLayout>
